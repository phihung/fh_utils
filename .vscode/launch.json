{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTEST_ADDOPTS": "--no-cov" }
    },
    {
      "name": "Run demo2",
      "type": "debugpy",
      "request": "launch",
      "module": "fh_utils.cli",
      "args": ["dev", "examples/demo2.py"],
      "justMyCode": false
    }
  ]
}
